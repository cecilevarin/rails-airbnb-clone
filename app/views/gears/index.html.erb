<div class="text-center">
  <h1>Here is all the kite gear available for rent</h1>
</div>

<div class="list-group">
  <ul>
    <%@gears.each do |gear| %>
      <li class=list-group-items>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'switchblade.jpg' %>');">
          <%# url(<%="#{gear.photo}"%>
          <div class="card-description">
            <h3><%= gear.brand %></h3>
            <h3><%= gear.model %></h3>
            <h3><%= gear.size %></h3>

          </div>

          <%=link_to "Go to gear page", gear_path(gear)%>
        </div>

      </li>
    <% end %>
  </ul>
</div>

